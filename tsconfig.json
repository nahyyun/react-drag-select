{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "target": "es2015",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
